@{
    ViewData["Title"] = "Boardgame Tracker";
}

<h3>@ViewData["Title"]</h3>

<div class="mdl-grid">
    <div class="mdl-cell mdl-cell--4-col">
        <div class="demo-card-square mdl-card mdl-shadow--2dp">
            <div class="mdl-card__title mdl-card--expand" id="collection">
                <h2 class="mdl-card__title-text homeLabel">Collection</h2>
            </div>
            <div class="mdl-card__supporting-text">
                View and manage collection assets.
            </div>
            <div class="mdl-card__actions mdl-card--border">
                <a class="mdl-button mdl-button--colored" asp-controller="Collection" asp-action="Index">
                    View Collection
                </a>
            </div>
        </div>
    </div>

    <div class="mdl-cell mdl-cell--4-col">
        <div class="demo-card-square mdl-card mdl-shadow--2dp">
            <div class="mdl-card__title mdl-card--expand" id="players">
                <h2 class="mdl-card__title-text homeLabel">Players</h2>
            </div>
            <div class="mdl-card__supporting-text">
                View and manage player data.
            </div>
            <div class="mdl-card__actions mdl-card--border">
                <a class="mdl-button mdl-button--colored" asp-controller="Player" asp-action="Index">
                    View Player Index
                </a>
            </div>
        </div>
    </div>

    <div class="mdl-cell mdl-cell--4-col">
        <div class="demo-card-square mdl-card mdl-shadow--2dp">
            <div class="mdl-card__title mdl-card--expand" id="plays">
                <h2 class="mdl-card__title-text homeLabel">Games</h2>
            </div>
            <div class="mdl-card__supporting-text">
                View and manage games.
            </div>
            <div class="mdl-card__actions mdl-card--border">
                <a class="mdl-button mdl-button--colored" asp-controller="Played" asp-action="Index">
                    View Game Index
                </a>
            </div>
        </div>
    </div>
</div>