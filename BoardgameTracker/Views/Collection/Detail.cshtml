@model BoardgameTracker.Models.Colection.AssetDetailModel

<div class="container">
    <h4>@Model.Name</h4>
</div>

<div class="jumbotron">
    <div class="row">
        <div class="col-6">
            <div>
                <img class="img-fluid" src="@Model.Image" />
            </div>
        </div>

        <div class="col-6">
            <h1>@Model.Name</h1>
            <p id="itemAuthor">@Model.Description</p>
            <h3>Rating: </h3><p>@Model.Rating</p>
        </div>
    </div>  
</div>

<div class="row">
    <div class="col-12">
        <a asp-controller="Collection" asp-action="Index" class="btn btn-primary">Back</a>
    </div>
</div>












