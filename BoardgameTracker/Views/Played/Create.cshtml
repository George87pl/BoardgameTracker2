@model BoardgameTracker.Models.Played.AssetCreateIndex

<div class="col-md-8 offset-md-2">
    <div class="drop shadow">     
        <form asp-action="Create" method="post" enctype="multipart/form-data" id="upload-form">
            <div class="form-group">
                <label class="text">Select Boardgame</label>
                <select class="form-control" asp-for="@Model.BoardgameId" asp-items="@(new SelectList(Model.Boardgames, "Id", "Name"))"></select>
            </div>
            <div class="form-group">
                <label class="text">Select Players</label>
                <select multiple class="form-control" asp-for="@Model.PlayerIds" asp-items="@(new SelectList(Model.Players, "Id", "Name"))"></select>
                <span asp-validation-for="@Model.PlayerIds" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Descryption"></label>
                <textarea asp-for="@Model.Descryption" rows="5" cols="50" class="form-control"></textarea>
                <span asp-validation-for="@Model.Descryption" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="text">Select Photos</label>
                <input type="file" multiple="multiple" name="imageUpload" class="form-control-file">
            </div>
            <div>
                <button type="submit" class="btn btn-info">
                    Submit
                </button>
            </div>
        </form>
    </div>
    <div>
        <a asp-action="Index" class="btn btn-primary btn-back">
            Back
        </a>
    </div>
</div>

