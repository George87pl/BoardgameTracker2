@model BoardgameTracker.Models.Played.AssetPlayedDetail


<div class="jumbotron">
    <div class="row">
        <div class="col-9">
            <h1>@Model.Boardgame.Name</h1>
            <p class="small">@Model.Date</p>
            <p>@Model.Description</p>
        </div>
        <div class="col-3 float-right">
            <img class="img-thumbnail gallery-image" src="@Model.Boardgame.Image" />
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="text text-center"><h3>Players</h3></div>
        <table class="table table-striped table-bordered table-player">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Score</th>
                    <th>Winner</th>
                </tr>
            </thead>
            @foreach (var player in Model.Players)
            {
                <tr class="text-center">
                    <td class="col-2 text-center"><img class="img-thumbnail player-played-image" src="@player.Player.Image" /></td>
                    <td>@player.Player.Name</td>
                    <td>??</td>
                    <td>??</td>
                </tr>

            }
        </table>
    </div>
</div>

<br />

<div class="row">
    <div class="col-12">
        <div class="text text-center"><h3>Images</h3></div>
        <div class="gallery-content text-center">
            @foreach (var image in Model.Images)
            {
                <a href="@image.Url" data-lightbox="roadtrip"><img class="img-thumbnail gallery-image" src="@image.Url" /></a>
            }
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <a asp-controller="Played" asp-action="Index" class="btn btn-primary float-left">Back</a>
        <a asp-controller="Player" asp-action="Delete" class="btn btn-danger float-right" data-toggle="modal" data-target="#exampleModal">Delete</a>
        <a asp-controller="Player" asp-action="Update" asp-route-id="@Model.Id" class="btn btn-info float-right" id="btn-pading">Edit</a>

        <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Delete</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        Are you sure to delete @Model.Boardgame.Name
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <form asp-action="Delete" method="post" enctype="multipart/form-data" id="delete-form">
                            <input type="hidden" asp-for="Id" />
                            <input type="hidden" asp-for="Id" />
                            <input type="submit" value="Delete" class="btn btn-danger" />
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


