@model BoardgameTracker.Models.Player.CreatePlayerModel

<div class="col-md-8 offset-md-2">
    <div class="drop shadow">
        <form asp-action="Create" method="post" enctype="multipart/form-data" id="upload-form">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" rows="5" cols="50" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div>
                <label class="btn btn-secondary active">
                    Browse for Image
                    <input type="file" name="imageUpload" style="display: none" />
                </label>
                <span asp-validation-for="imageUpload" class="text-danger"></span>
            </div>
            <div>
                <button type="submit" class="btn btn-info">
                    Submit
                </button>
            </div>
        </form>
    </div>
    <div>
        <a asp-action="Index" class="btn btn-primary btn-back">
            Back
        </a>
    </div>
</div>

