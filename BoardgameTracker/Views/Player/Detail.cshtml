@using System.Threading
@model BoardgameTracker.Models.Player.AssetPlayerDetail

<div class="jumbotron">
    <div class="row">
        <div class="col-5">
            <div>
                <img class="img-fluid" src="@Model.Image" />
            </div>
        </div>

        <div class="col-7">
            <h1>@Model.Name</h1>
            <p id="itemAuthor">@Model.Description</p>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <a asp-controller="Player" asp-action="Index" class="btn btn-primary float-left">Back</a>
        <a asp-controller="Player" asp-action="Delete" class="btn btn-danger float-right" data-toggle="modal" data-target="#exampleModal">Delete</a>
        <a asp-controller="Player" asp-action="Update" asp-route-id="@Model.Id" class="btn btn-info float-right" id="btn-pading">Edit</a>

        <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Delete</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        @if (Model.Played.Count() > 0)
                        {
                            <p>Can't Delete! First remove plays contains that player.</p>
                        }
                        else
                        {
                            <p>Are you sure to delete @Model.Name?</p>
                        }

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <form asp-action="Delete" method="post" enctype="multipart/form-data" id="delete-form">
                            <input type="hidden" asp-for="Id" />
                            <input type="hidden" asp-for="Image" />
                            @if (Model.Played.Count() == 0)
                            {
                            <input type="submit" value="Delete" class="btn btn-danger" />
                            }
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<br />

@if (Model.Played.Count() > 0)
{
    <div class="row">
        <div class="col-12">
            <table class="table table-striped table-bordered">
                <thead>
                <tr>
                    <th>Image</th>
                    <th>Date</th>
                    <th>Description</th>
                    <th>Players</th>
                    <th>Winner</th>
                </tr>
                </thead>

                @foreach (var play in Model.Played)
                {
                    <tr>
                        <td class="col-1"><img class="img-thumbnail player-played-image" src="@play.Boardgame.Image"/></td>
                        <td class="col-2">@play.Date</td>
                        <td class="col-5">@play.Description</td>

                        <td class="col-2">
                            @foreach (var player in play.Players)
                            {
                                <p>@player.Player.Name</p>
                            }
                        </td>
                        <td class="col-1">??</td>
                    </tr>

                }
            </table>
        </div>
    </div>
}

